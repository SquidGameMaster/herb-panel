<div class="stats">
    <% 
    let overallTotalValue = 0;
    let totalInventoryItems = 0;
    inventory.forEach(item => {
        overallTotalValue += (item.item_data.total_value || 0);
        totalInventoryItems += (item.item_data.item_count || 0);
    });
    %>
    <div class="stat-item"> 
        <svg class="stat-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"></circle><line x1="12" y1="16" x2="12" y2="12"></line><line x1="12" y1="8" x2="12.01" y2="8"></line></svg>
        <div>
            <span class="label">Total Accounts</span>
            <span class="value"><%= inventory.length %></span>
        </div>
    </div>
     <div class="stat-item"> 
        <svg class="stat-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect><line x1="16" y1="2" x2="16" y2="6"></line><line x1="8" y1="2" x2="8" y2="6"></line><line x1="3" y1="10" x2="21" y2="10"></line></svg>
        <div>
            <span class="label">Total Value (All)</span>
            <span class="value">$<%= overallTotalValue.toFixed(2) %></span>
        </div>
    </div>
     <div class="stat-item"> 
        <svg class="stat-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M21 16V8a2 2 0 0 0-1-1.73l-7-4a2 2 0 0 0-2 0l-7 4A2 2 0 0 0 3 8v8a2 2 0 0 0 1 1.73l7 4a2 2 0 0 0 2 0l7-4A2 2 0 0 0 21 16z"></path><polyline points="3.27 6.96 12 12.01 20.73 6.96"></polyline><line x1="12" y1="22.08" x2="12" y2="12"></line></svg>
        <div>
            <span class="label">Total Items (All)</span>
            <span class="value"><%= totalInventoryItems %></span>
        </div>
    </div>
</div> 